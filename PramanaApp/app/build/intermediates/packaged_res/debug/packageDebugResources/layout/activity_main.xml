<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="TruthLens Logo"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TruthLens"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/appTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI-powered fact verification at your fingertips"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Verify Now button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Now"
            android:textColor="@android:color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/purple_500" />

    </LinearLayout>

    <!-- Floating Action Button (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Quick Verify"
        app:srcCompat="@android:drawable/ic_menu_search"
        app:backgroundTint="@color/purple_500"
        app:tint="@android:color/white"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp" />

</FrameLayout>