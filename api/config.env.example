# TruthLens API Configuration

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=orange-lens-472108
GOOGLE_CLOUD_LOCATION=us-central1

# Storage Configuration
STORAGE_BUCKET=truthlens-evidence

# BigQuery Configuration
BIGQUERY_DATASET=truthlens_logs
BIGQUERY_TABLE=verification_requests

# API Configuration
PORT=8080
API_KEY_SECRET_NAME=truthlens-api-key
FACT_CHECK_API_KEY_SECRET_NAME=fact-check-api-key
GEMINI_MODEL=gemini-1.5-flash-002
GEMINI_MODE=express

# Local development (optional)
# Set this to your Google Fact Check API key to run locally without Secret Manager
# If set, the API will prefer this over Secret Manager for fact checks
FACT_CHECK_API_KEY=

# Gemini Express API Key (optional for local)
# When GEMINI_MODE=express, the backend uses the Gemini Express API.
# Set GEMINI_API_KEY locally or configure Secret Manager: gemini-express-api-key
GEMINI_API_KEY=

# Security Configuration
CORS_ORIGINS=["https://truthlens.app", "https://www.truthlens.app"]

# Cost Controls
MAX_TEXT_LENGTH=10000
MAX_IMAGE_SIZE_MB=10
MAX_REQUESTS_PER_MINUTE=100

# Retention Settings
IMAGE_RETENTION_DAYS=14
LOG_RETENTION_DAYS=30
RESPONSE_RETENTION_DAYS=30
